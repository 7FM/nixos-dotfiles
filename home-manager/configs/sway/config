# Desktop Setup:

set $disp1 DVI-D-1
set $disp2 HDMI-A-1

output $disp1 res 1920x1080@144Hz pos 0,0
output $disp2 res 1920x1080 pos 1920,0

# Bind workspaces to monitors
workspace $ws1  output $disp1 
workspace $ws2  output $disp1 
workspace $ws3  output $disp1 
workspace $ws4  output $disp1 
workspace $ws5  output $disp1 
workspace $ws6  output $disp1 
workspace $ws7  output $disp1 
workspace $ws8  output $disp1 
workspace $ws9  output $disp1 
workspace $ws10 output $disp1 

workspace $wsa1  output $disp2 
workspace $wsa2  output $disp2 
workspace $wsa3  output $disp2 
workspace $wsa4  output $disp2 
workspace $wsa5  output $disp2 
workspace $wsa6  output $disp2 
workspace $wsa7  output $disp2 
workspace $wsa8  output $disp2 
workspace $wsa9  output $disp2 
workspace $wsa10 output $disp2 

exec swaymsg focus output $disp1

